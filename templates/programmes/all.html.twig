{% extends 'base.html.twig' %}

{% block title %}Programmes
{% endblock %}

{% block content %}
	{% if is_granted('ROLE_TEACHER') %}
		<a href="{{ path('programmes_home') }}" class="btn btn-primary float-end mt-n1">
			<i class="fas fa-plus"></i>
			Retour aux programmes
		</a>
	{% endif %}
	<h1 class="h3 mb-3">Programmes</h1>
	<div class="row">
    {% if app.request.attributes.get('_route') == 'programmes_all_public' %}    
		<div class="col-12">
			<div class="card">
				<div class="card-header">
					<h2 class="card-title h5">Programmes publiques</h2>
					<p class="card-subtitle text-muted h6">Tous les programmes publiques.</p>
				</div>
				<div class="card-body p-3">
					{% if app.user.roles == ["ROLE_TEACHER"] %}
						{% for programme in app.user.programmes|sort((a, b) => b.id <=> a.id) %}
							{% if programme.ProgrammesLecons.name == "Publique" and programme.lecons|length > 0 %}
								<div id="tasks-upcoming">
									<div class="card mb-3 d-block">
										{% if is_granted("ROLE_TEACHER") %}
											<div class="card-actions float-end">
												<div class="dropdown show">
													<a href="#" data-bs-toggle="dropdown" data-bs-display="static">
														<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal align-middle">
															<circle cx="12" cy="12" r="1"></circle>
															<circle cx="19" cy="12" r="1"></circle>
															<circle cx="5" cy="12" r="1"></circle>
														</svg>
													</a>
													<div class="dropdown-menu dropdown-menu-end">
														<a class="dropdown-item" href="{{ path('programmes_edit', {id: programme.id} ) }}">
															Modifier programme
														</a>
														<a href="#" class="dropdown-item modal-trigger" type="button" data-bs-toggle="modal" data-bs-target="#modal-delete" data-target="modal-delete" data-id="{{programme.id}}" data-titre="{{programme.nom}}">
															Supprimer
														</a>
														{# <a class="dropdown-item" href="#">
																												Ajouter une leçon
																											</a> #}
													</div>
												</div>
											</div>
										{% endif %}
										<div class="row g-0">
											<div class="col-md-4">
												<img src="{{ asset('/uploads/lecons/images/' ~ programme.image)|imagine_filter('square') }}" alt="Atempo-Education | {{ programme.image }}" class="img-fluid rounded-start">
											</div>
											<div class="col-md-8">
												<div class="card-body">
													<h3 class="card-title h5">
														{{ programme.nom }}
														({{ programme.lecons|length }}
														leçon
														{% if programme.lecons|length > 1 %}s
														{% endif %})
													</h3>
												</div>
												<a href="{{ path('programmes_details', {slug: programme.slug}) }}" class="btn btn-primary float-end">
													Voir le programme
												</a>
											</div>
										</div>
									</div>
								</div>
							{% endif %}
						{% endfor %}
					{% else %}
						{% for programme in programmes|sort((a, b) => b.id <=> a.id) %}
							{% if programme.ProgrammesLecons.name == "Publique" %}
								{% if programme.lecons|length > 0 %}
									<div id="tasks-upcoming">
										<div class="card mb-3 d-block">
											{% if is_granted("ROLE_TEACHER") %}
												<div class="card-actions float-end">
													<div class="dropdown show">
														<a href="#" data-bs-toggle="dropdown" data-bs-display="static">
															<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal align-middle">
																<circle cx="12" cy="12" r="1"></circle>
																<circle cx="19" cy="12" r="1"></circle>
																<circle cx="5" cy="12" r="1"></circle>
															</svg>
														</a>
														<div class="dropdown-menu dropdown-menu-end">
															<a class="dropdown-item" href="{{ path('programmes_edit', {id: programme.id} ) }}">
																Modifier programme
															</a>
															<a href="#" class="dropdown-item modal-trigger" type="button" data-bs-toggle="modal" data-bs-target="#modal-delete" data-target="modal-delete" data-id="{{programme.id}}" data-titre="{{programme.nom}}">
																Supprimer
															</a>
															{# <a class="dropdown-item" href="#">
																														Ajouter une leçon
																													</a> #}
														</div>
													</div>
												</div>
											{% endif %}
											<div class="row g-0">
												<div class="col-md-4">
													<img src="{{ asset('/uploads/lecons/images/' ~ programme.image)|imagine_filter('square') }}" alt="Atempo-Education | {{ programme.image }}" class="img-fluid rounded-start">
												</div>
												<div class="col-md-8">
													<div class="card-body">
														<h3 class="card-title h5">
															{{ programme.nom }}
															({{ programme.lecons|length }}
															leçon
															{% if programme.lecons|length > 1 %}s
															{% endif %})
														</h3>
													</div>
													<a href="{{ path('programmes_details', {slug: programme.slug}) }}" class="btn btn-primary float-end">
														Voir le programme
													</a>
												</div>
											</div>
										</div>
									</div>
								{% endif %}
							{% endif %}
						{% endfor %}
					{% endif %}
				</div>
			</div>
		</div>
    {% else %}
		<div class="col-12">
			<div class="card">
				<div class="card-header">
					<h2 class="card-title h5">
						Programmes privés
					</h2>
					<h6 class="card-subtitle text-muted">
						Retrouvez les programmes privés ici.
					</h6>
				</div>
				<div class="card-body">
					{% for programme in app.user.programmes|sort((a, b) => b.id <=> a.id) %}
						{% if programme.ProgrammesLecons.name == "Privée" %}
							<div id="tasks-upcoming">
								<div class="card mb-3 d-block">
									{% if is_granted("ROLE_TEACHER") %}
										<div class="card-actions float-end">
											<div class="dropdown show">
												<a href="#" data-bs-toggle="dropdown" data-bs-display="static">
													<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal align-middle">
														<circle cx="12" cy="12" r="1"></circle>
														<circle cx="19" cy="12" r="1"></circle>
														<circle cx="5" cy="12" r="1"></circle>
													</svg>
												</a>
												<div class="dropdown-menu dropdown-menu-end">
													<a class="dropdown-item" href="{{ path('programmes_edit', {id: programme.id} ) }}">
														Modifier programme
													</a>
													<a href="#" class="dropdown-item modal-trigger" type="button" data-bs-toggle="modal" data-bs-target="#modal-delete" data-target="modal-delete" data-id="{{programme.id}}" data-titre="{{programme.nom}}">
														Supprimer le programme
													</a>
													{# <a class="dropdown-item" href="#">
																											Ajouter une leçon
																										</a> #}
												</div>
											</div>
										</div>
									{% endif %}
									<div class="row g-0">
										<div class="col-md-4">
											<img src="{{ asset('/uploads/lecons/images/' ~ programme.image)|imagine_filter('square') }}" alt="Atempo-Education | {{ programme.image }}" class="img-fluid rounded-start">
										</div>
										<div class="col-md-8">
											<div class="card-body">
												<h3 class="card-title h5">
													{{ programme.nom }}
													({{ programme.lecons|length }}
													leçon
													{% if programme.lecons|length > 1 %}s
													{% endif %})
												</h3>
											</div>
											<a href="{{ path('programmes_details', {slug: programme.slug}) }}" class="btn btn-primary float-end">
												Voir le programme
											</a>
										</div>
									</div>
								</div>
							</div>
						{% endif %}
					{% endfor %}

				</div>
			</div>
		</div>
        {% endif %}
	</div>

	<div class="modal fade" id="modal-delete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h3 class="modal-title" id="exampleModalLabel">Supprimer un programme</h3>
					<br>
				</div>
				<div class="modal-body">
					<h4 class="h5"></h4>
					<br>
						<p></p>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-info" data-bs-dismiss="modal">Annuler</button>
						<a href="" type="button" class="btn btn-danger">Supprimer</a>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}


	{% block javascripts %}
		<script>
			let supprimer = document.querySelectorAll(".modal-trigger")
            for (let bouton of supprimer) {
            bouton.addEventListener("click", function () {
            document.querySelector(".modal-footer a").href = `/programmes/supprimer/${
            this.dataset.id
            }`
            document.querySelector(".modal-body h4").innerText = `Êtes vous sûr(e) de vouloir supprimer le programme "${
            this.dataset.titre
            }" ?`
            document.querySelector(".modal-body p").innerText = `Cette action ne sera pas réversible, et le programme sera totalement perdu. `
            })
            }
		</script>
	{% endblock %}
